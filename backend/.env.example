# Database Configuration (SQLite - No installation needed!)
DATABASE_URL=sqlite+aiosqlite:///./gharmitra.db
DATABASE_ECHO=False  # Set to True to see SQL queries in logs

# To use PostgreSQL instead (optional):
# DATABASE_URL=postgresql+asyncpg://username:password@localhost/gharmitra

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# CORS - Allowed origins (comma separated)
ALLOWED_ORIGINS=http://localhost:19006,http://localhost:3000,http://192.168.*.*:19006

# Application
DEBUG=True
API_VERSION=v1
APP_NAME=GharMitra API

# Optional: Email Configuration (for sending reports, password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
FROM_EMAIL=noreply@gharmitra.com

# Optional: File Upload
MAX_UPLOAD_SIZE=5242880  # 5MB in bytes
UPLOAD_DIR=./uploads

# Optional: Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Optional: Logging
LOG_LEVEL=INFO
