{
  "name": "gharmitra",
  "version": "1.0.0",
  "description": "Mobile accounting app with messaging for apartment associations",
  "main": "index.js",
  "scripts": {
    "start": "react-native start",
    "start:network": "react-native start --host 192.168.29.141",
    "android": "node scripts/run-android-phone-only.js",
    "android:device": "react-native run-android --deviceId",
    "android:phone": "node scripts/run-android-phone-only.js",
    "android:emulator": "react-native run-android",
    "ios": "react-native run-ios",
    "ios:device": "react-native run-ios --device",
    "web:dev": "cd web && npm run dev",
    "web:build": "cd web && npm run build",
    "desktop:dev": "cd desktop && npm start",
    "desktop:build": "cd desktop && npm run build",
    "desktop:build:win": "cd desktop && npm run build:win",
    "desktop:build:mac": "cd desktop && npm run build:mac",
    "desktop:build:linux": "cd desktop && npm run build:linux",
    "test": "jest",
    "test:unit": "jest --testPathPattern=src",
    "test:backend": "cd backend && python -m pytest",
    "test:backend:cov": "cd backend && python -m pytest --cov=. --cov-report=html",
    "test:e2e": "detox test",
    "test:e2e:android": "detox test --configuration android.emu.debug",
    "test:e2e:ios": "detox test --configuration ios.sim.debug",
    "test:build:e2e:android": "detox build --configuration android.emu.debug",
    "test:build:e2e:ios": "detox build --configuration ios.sim.debug",
    "test:all": "npm run test:backend && npm run test:unit",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.21.0",
    "@react-native-community/datetimepicker": "^8.5.0",
    "@react-native-firebase/app": "^19.0.1",
    "@react-native-firebase/auth": "^19.0.1",
    "@react-native-firebase/firestore": "^19.0.1",
    "@react-native-firebase/messaging": "^19.0.1",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/stack": "^6.3.20",
    "axios": "^1.13.2",
    "babel-plugin-module-resolver": "^5.0.2",
    "crypto-js": "^4.2.0",
    "date-fns": "^3.0.6",
    "formik": "^2.4.5",
    "react": "18.2.0",
    "react-native": "0.73.2",
    "react-native-chart-kit": "^6.12.0",
    "react-native-config": "^1.6.0",
    "react-native-gesture-handler": "^2.16.0",
    "react-native-markdown-display": "^7.0.2",
    "react-native-safe-area-context": "^4.8.2",
    "react-native-screens": "^4.4.0",
    "react-native-svg": "^14.1.0",
    "react-native-vector-icons": "^10.3.0",
    "yup": "^1.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "@babel/runtime": "^7.23.7",
    "@react-native-community/cli": "^20.1.0",
    "@react-native/babel-preset": "^0.73.19",
    "@react-native/eslint-config": "^0.73.2",
    "@react-native/metro-config": "^0.73.3",
    "@react-native/typescript-config": "^0.73.1",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.3.3",
    "@types/crypto-js": "^4.2.2",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.2.46",
    "@types/react-native-vector-icons": "^6.4.18",
    "@types/react-test-renderer": "^18.0.7",
    "acorn": "^8.11.3",
    "babel-jest": "^29.7.0",
    "detox": "^20.46.3",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "react-test-renderer": "18.2.0",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "engines": {
    "node": ">=18"
  }
}
